generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum CmsStatus {
  DRAFT
  PUBLISHED
}

enum AdminRole {
  ADMIN
}

model AdminUser {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  role         AdminRole @default(ADMIN)
  createdAt    DateTime  @default(now())
}

model Service {
  id        Int       @id @default(autoincrement())
  title     String
  slug      String    @unique
  excerpt   String
  body      String
  status    CmsStatus @default(DRAFT)
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  excerpt     String
  content     String
  status      CmsStatus @default(DRAFT)
  publishedAt DateTime?
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}

model Faq {
  id        Int       @id @default(autoincrement())
  question  String
  answer    String
  order     Int       @default(0)
  status    CmsStatus @default(DRAFT)
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}

model SiteSettings {
  id           Int      @id @default(1)
  whatsappE164 String
  email        String
  address      String?
  heroTitle    String
  heroSubtitle String
  updatedAt    DateTime @updatedAt
}
